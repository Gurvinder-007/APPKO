<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Student Info Section -->
    <ImageView
        android:id="@+id/avatarImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_gravity="center" />

    <TextView
        android:id="@+id/studentNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingTop="8dp" />

    <!-- Program Info -->
    <TextView
        android:id="@+id/programNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Program"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:paddingTop="8dp" />

    <!-- Task Completion Progress -->
    <TextView
        android:id="@+id/taskCompletionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Completion: 0%"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:paddingTop="4dp" />

    <!-- Program List -->
    <ListView
        android:id="@+id/programListView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp" />

    <!-- Action Buttons -->
    <Button
        android:id="@+id/uploadSightingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Sighting"
        android:layout_gravity="center"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/completeTaskButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complete Task"
        android:layout_gravity="center"
        android:layout_marginTop="16dp" />
</LinearLayout>
