<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/teacherNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, [Teacher Name]"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:gravity="center" />

    <TextView
        android:id="@+id/totalStudentsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Students: 0"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:textSize="16sp" />

    <Button
        android:id="@+id/addActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Activity"
        android:layout_gravity="center"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/manageClassesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Classes"
        android:layout_gravity="center"
        android:layout_marginTop="8dp" />

    <!-- Class List Section -->
    <ListView
        android:id="@+id/classListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />
</LinearLayout>

